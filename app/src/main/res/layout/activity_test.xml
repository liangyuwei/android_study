<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yuweiliang.android_study.TestActivity"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="10">

        <!--TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="Grid Layout"
            android:textSize="30dp"
            android:layout_row="0" android:layout_column="0"
            android:layout_rowSpan="1" android:layout_columnSpan="3" /-->

        <Button
            android:id="@+id/button1"
            android:text="(1,1)"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1" android:layout_column="0"
            android:layout_rowSpan="1" android:layout_columnSpan="1" />

        <Button
            android:id="@+id/button2"
            android:text="Button2"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1" android:layout_column="1"
            android:layout_rowSpan="1" android:layout_columnSpan="1" />

        <Button
            android:id="@+id/button3"
            android:text="Button3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1" android:layout_column="2"
            android:layout_rowSpan="1" android:layout_columnSpan="2" />

        <!--Button
            android:id="@+id/button4"
            android:text="Button4"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1" android:layout_column="3"
            android:layout_rowSpan="1" android:layout_columnSpan="1" /-->


        <Button
            android:id="@+id/button5"
            android:text="Button5"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" android:layout_column="0"
            android:layout_rowSpan="1" android:layout_columnSpan="1" />

        <Button
            android:id="@+id/button55"
            android:text="Button55"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" android:layout_column="1"
            android:layout_rowSpan="1" android:layout_columnSpan="3"/>

    </GridLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:gravity="center">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Table Layout"
                android:textSize="30dp"
                android:layout_span="3"/>
        </TableRow>

        <TableRow
            android:layout_gravity="center">
            <Button
                android:id="@+id/button_1"
                android:text="Button1"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_2"
                android:text="Button2"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_3"
                android:text="Button3"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
